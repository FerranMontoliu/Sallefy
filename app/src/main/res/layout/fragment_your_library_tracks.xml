<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_your_library_tracks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darker_background"
    android:orientation="vertical"
    tools:context=".fragment.YourLibraryTracksFragment">

    <include
        android:id="@+id/item_track_layout"
        layout="@layout/item_create_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tracks_empty_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:gravity="center"
        android:text="@string/no_own_tracks_to_show" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tracks_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@color/darker_background"
        android:orientation="vertical"
        android:visibility="gone" />

</LinearLayout>