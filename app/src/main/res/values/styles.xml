<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="NoTitle">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="GreenButton" parent="AppTheme">
        <item name="android:textColor">@color/light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreenSwitch" parent="AppTheme">
        <item name="colorSwitchThumbNormal">@color/switch_thumb</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="android:colorForeground">@color/switch_track</item>
    </style>

</resources>
